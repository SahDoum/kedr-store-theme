{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "layout": {
      "contentSize": "736px",
      "wideSize": "calc(100% - 2rem)"
    },
    "custom": {
      "color-primary": "#48625e",
      "color-background": "#efeded",
      "color-dark": "#212529",
      "color-muted": "#c4c4c4",
      "color-dim": "#00000080"
    },
    "color": {
      "custom": false,
      "customGradient": false,
      "gradients": [],
      "link": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "duotone": [],
      "palette": [
        {
          "name": "Основной",
          "slug": "primary",
          "color": "#48625e"
        },
        {
          "name": "Полупрозрачный",
          "slug": "overlay-primary",
          "color": "#48625e50"
        },
        {
          "name": "Альтернативный",
          "slug": "secondary",
          "color": "#efeded"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Lora",
          "slug": "serif",
          "fontFamily": "Lora",
          "fontFace": [
            {
              "fontFamily": "Lora",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-Regular.woff2"]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "400",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-Italic.woff2"]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-Bold.woff2"]
            }
          ]
        },
        {
          "name": "Raleway",
          "slug": "regular",
          "fontFamily": "Raleway",
          "fontFace": [
            {
              "fontFamily": "Raleway",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Raleway-Light.woff2"]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Raleway-Regular.woff2"]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "600",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Raleway-Semibold.woff2"]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Raleway-Bold.woff2"]
            }
          ]
        }
      ],
      "customFontSize": false,
      "fontSizes": [],
      "fontStyle": false,
      "dropCap": false,
      "fluid": false,
      "letterSpacing": false,
      "fontWeight": false
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontFamilies": []
        }
      }
    },
    "spacing": {
      "units": ["px", "em", "rem"]
    }
  },
  "styles": {
    "typography": {
      "fontSize": "1.1875rem",
      "lineHeight": "1.5",
      "fontFamily": "var(--wp--preset--font-family--serif)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "2.25rem",
          "lineHeight": "1.075"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "2rem",
          "lineHeight": "1.125"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.75rem"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.5rem"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.375rem"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.1875rem"
        }
      },
      "caption": {
        "color": {
          "text": "var(--wp--custom--color-dim)"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "0.875rem"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--custom--color-primary)"
        },
        "border": {
          "bottom": {
            "width": "0.1075rem",
            "color": "var(--wp--custom--color-primary)",
            "style": "solid"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      }
    },
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)"
        }
      },
      "core/paragraph": {
        "css": "& {box-sizing: border-box} &.has-background {border-radius: 0.3125rem}"
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--custom--color-primary)",
            "width": "0.5rem",
            "style": "solid"
          }
        },
        "typography": {
          "fontSize": "1.5rem",
          "lineHeight": "1.4"
        },
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "2rem"
          },
          "padding": {
            "left": "1.5rem"
          }
        },
        "elements": {
          "cite": {
            "typography": {
              "fontSize": "1.125rem",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontFamily": "var(--wp--preset--font-family--regular)"
            }
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--custom--color-primary)"
        }
      },
      "core/image": {
        "border": {
          "radius": "0.3125rem"
        },
        "css": "& figcaption {text-align: center}"
      },
      "core/embed": {
        "css": "& figcaption {text-align: center}"
      },
      "core/gallery": {
        "css": "& figure.wp-block-image figcaption {position:relative; background:none; color:var(--wp--custom--color-dim)}"
      },
      "kedr/help": {
        "typography": {
          "fontSize": "1rem",
          "fontFamily": "var(--wp--preset--font-family--regular)"
        },
        "color": {
          "text": "var(--wp--custom--color-dark)",
          "background": "var(--wp--custom--color-background)"
        },
        "spacing": {
          "padding": {
            "left": "2.5rem",
            "right": "2.5rem",
            "top": "2rem",
            "bottom": "2rem"
          }
        },
        "border": {
          "radius": "0.3125rem"
        }
      },
      "kedr/details": {
        "color": {
          "text": "var(--wp--custom--color-dark)"
        },
        "spacing": {
          "padding": {
            "left": "1rem",
            "right": "1rem"
          }
        },
        "border": {
          "width": "0.125rem",
          "color": "var(--wp--custom--color-muted)",
          "radius": "0.3125rem"
        },
        "css": "& {box-sizing:border-box; border:solid 2px var(--wp--custom--color-muted);} & summary {display:flex; justify-content:center; padding:1rem 0; font-family:var(--wp--preset--font-family--regular); font-weight: 600;}"
      }
    }
  }
}
